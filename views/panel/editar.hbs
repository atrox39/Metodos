            <label for="nombre">Nombre del proyecto</label>
            <input type="text" name="nombre" id="nombre" value="{{ proyecto.nombre }}" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="descripcion">Descripci√≥n del proyecto</label>
            <textarea rows="5" type="text" name="descripcion" id="descripcion" class="form-control" required>{{ proyecto.descripcion }}</textarea>
        </div>
        <div class="form-group text-center">
            <button class="btn btn-success form-control">
                <i class="fas fa-edit"></i> Editar
            </button>
        </div>
        {{> information }}
    </form>
</div>